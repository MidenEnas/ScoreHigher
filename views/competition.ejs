<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= competition.name %> - Score Higher</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1><%= competition.name %></h1>
        <nav>
            <a href="/">Home</a>
            <% if (user) { %>
                <% if (isAdmin) { %>
                    <a href="/admin">Admin</a>
                <% } %>
                <span class="user-info">Welcome, <%= user.first_name %>!</span>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            <% } else { %>
                <a href="/login">Login</a>
                <a href="/register">Register</a>
            <% } %>
        </nav>
    </header>
    <main>
        <% if (typeof success !== 'undefined' && success === '1') { %>
            <div class="success-message">
                <p>âœ… Your scores have been submitted successfully! Thank you for participating.</p>
            </div>
        <% } %>

        <div class="competition-header">
            <div class="competition-info">
                <h2>Competition Details</h2>
                <p><strong>Date:</strong> <%= new Date(competition.date).toLocaleDateString() %></p>
                <p><strong>Location:</strong> <%= competition.location || 'TBA' %></p>
                <p><strong>Disciplines:</strong>
                    <%
                    let disciplines = [];
                    if (competition.boulder_enabled) disciplines.push(`Bouldering (${competition.num_boulder_routes} routes)`);
                    if (competition.lead_enabled) disciplines.push(`Lead (${competition.num_lead_routes} routes)`);
                    %>
                    <%= disciplines.join(', ') || 'None' %>
                </p>
                <p><strong>Type:</strong> <%= competition.self_judged ? 'Self-Judged' : 'Judged' %></p>
            </div>
        </div>

        <h2>Routes</h2>
        <% if (routes && routes.length > 0) { %>
            <div class="routes-summary">
                <%
                const boulderRoutes = routes.filter(r => r.type === 'boulder');
                const leadRoutes = routes.filter(r => r.type === 'lead');
                %>
                
                <% if (boulderRoutes.length > 0) { %>
                    <p><strong><%= boulderRoutes.length %> Bouldering Routes</strong></p>
                <% } %>
                
                <% if (leadRoutes.length > 0) { %>
                    <p><strong><%= leadRoutes.length %> Lead Routes</strong></p>
                <% } %>
            </div>
        <% } else { %>
            <p>No routes configured yet.</p>
        <% } %>

        <h2>Leaderboard</h2>
        <% if (leaderboard && leaderboard.length > 0) { %>
            <div class="leaderboard">
                <table class="leaderboard-table">
                    <thead>
                        <tr>
                            <th>Position</th>
                            <th>Name</th>
                            <th>Total Points</th>
                            <% 
                            const disciplinesEnabled = (competition.boulder_enabled ? 1 : 0) + (competition.lead_enabled ? 1 : 0);
                            if (disciplinesEnabled > 1) { 
                            %>
                                <% if (competition.boulder_enabled) { %>
                                    <th>Boulder Points</th>
                                    <th>Boulder Routes</th>
                                <% } %>
                                <% if (competition.lead_enabled) { %>
                                    <th>Lead Points</th>
                                    <th>Lead Routes</th>
                                <% } %>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% leaderboard.forEach((competitor, index) => { %>
                            <tr class="<%= index === 0 ? 'first-place' : index === 1 ? 'second-place' : index === 2 ? 'third-place' : '' %>">
                                <td class="position"><%= index + 1 %></td>
                                <td class="name"><%= competitor.name %></td>
                                <td class="total-points"><%= competitor.totalPoints %></td>
                                <% if (disciplinesEnabled > 1) { %>
                                    <% if (competition.boulder_enabled) { %>
                                        <td class="boulder-points"><%= competitor.boulderPoints %></td>
                                        <td class="boulder-routes"><%= competitor.boulderRoutes %></td>
                                    <% } %>
                                    <% if (competition.lead_enabled) { %>
                                        <td class="lead-points"><%= competitor.leadPoints %></td>
                                        <td class="lead-routes"><%= competitor.leadRoutes %></td>
                                    <% } %>
                                <% } %>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p>No scores submitted yet. Be the first to enter!</p>
        <% } %>

        <% if (competition.self_judged) { %>
            <div class="enter-competition">
                <a href="/competition/<%= competition.id %>/enter" class="enter-button">Enter Competition</a>
            </div>
        <% } %>
    </main>
</body>
</html>