<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Competition - Score Higher</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Create Competition</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/admin">Admin</a>
        </nav>
    </header>
    <main>
        <div class="form-container">
            <form action="/admin/create-competition" method="POST">
                <div class="form-row">
                    <label for="name">Competition Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>

                <div class="form-row">
                    <label for="date">Date:</label>
                    <input type="date" id="date" name="date" required>
                </div>

                <div class="form-row">
                    <label for="location">Location:</label>
                    <input type="text" id="location" name="location">
                </div>

                <div class="form-section">
                    <h3>Disciplines</h3>
                    
                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="boulder" name="boulder">
                            <span>Enable Bouldering</span>
                        </label>
                    </div>

                    <div id="boulderOptions" style="display: none;" class="conditional-section">
                        <div class="form-row">
                            <label for="numBoulder">Number of Boulder Routes:</label>
                            <input type="number" id="numBoulder" name="numBoulder" min="1">
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="lead" name="lead">
                            <span>Enable Lead</span>
                        </label>
                    </div>

                    <div id="leadOptions" style="display: none;" class="conditional-section">
                        <div class="form-row">
                            <label for="numLead">Number of Lead Routes:</label>
                            <input type="number" id="numLead" name="numLead" min="1">
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="customPoints" name="customPoints">
                            <span>Customize Point Values</span>
                        </label>
                    </div>

                    <div id="pointOptions" style="display: none;" class="conditional-section">
                        <h4>Point Values (Bouldering)</h4>
                        <div class="form-row">
                            <label for="flash">Flash Points:</label>
                            <input type="number" id="flash" name="flash" value="75">
                        </div>

                        <div class="form-row">
                            <label for="second">Second Attempt Points:</label>
                            <input type="number" id="second" name="second" value="50">
                        </div>

                        <div class="form-row">
                            <label for="third">Third+ Attempt Points:</label>
                            <input type="number" id="third" name="third" value="25">
                        </div>

                        <div class="form-row">
                            <label for="zone">Zone Points:</label>
                            <input type="number" id="zone" name="zone" value="15">
                        </div>

                        <div class="form-row">
                            <label for="bonus">Topped Bonus Multiplier:</label>
                            <input type="number" step="0.1" id="bonus" name="bonus" value="1.5">
                        </div>

                        <h4>Point Values (Lead)</h4>
                        <div class="form-row">
                            <label for="leadZone">Zone Points:</label>
                            <input type="number" id="leadZone" name="leadZone" value="15">
                        </div>

                        <div class="form-row">
                            <label for="leadTop">Top Points:</label>
                            <input type="number" id="leadTop" name="leadTop" value="75">
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="selfJudged" name="selfJudged">
                            <span>Self-Judged Competition</span>
                        </label>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="submit-button">Create Competition</button>
                </div>
            </form>
        </div>

        <script>
            document.getElementById('boulder').addEventListener('change', function() {
                document.getElementById('boulderOptions').style.display = this.checked ? 'block' : 'none';
            });
            document.getElementById('lead').addEventListener('change', function() {
                document.getElementById('leadOptions').style.display = this.checked ? 'block' : 'none';
            });
            document.getElementById('customPoints').addEventListener('change', function() {
                document.getElementById('pointOptions').style.display = this.checked ? 'block' : 'none';
            });
        </script>
    </main>
</body>
</html>