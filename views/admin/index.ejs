<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Score Higher</title>
    <link rel="stylesheet" href="/styles.css?v=2">
</head>
<body>
    <header>
        <h1>Admin Dashboard</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/admin/users">Manage Users</a>
            <span class="user-info">Welcome, <%= user.first_name %>!</span>
            <form action="/logout" method="POST" style="display: inline;">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </nav>
    </header>
    <main>
        <h2>Manage Competitions</h2>
        <a href="/admin/create-competition">Create New Competition</a>
        <h3>Existing Competitions</h3>
        <% if (competitions && competitions.length > 0) { %>
            <ul>
                <% competitions.forEach(comp => { %>
                    <li>
                        <strong><%= comp.name %></strong> - <%= comp.date %>
                        <a href="/admin/competition/<%= comp.id %>">Manage</a>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No competitions yet.</p>
        <% } %>
    </main>
</body>
</html>