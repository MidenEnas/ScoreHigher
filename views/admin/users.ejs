<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users - Score Higher</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Score Higher - Admin</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/admin">Admin Dashboard</a>
            <form action="/logout" method="POST" style="display: inline;">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </nav>
    </header>
    <main>
        <h2>Manage Users</h2>

        <% if (message) { %>
            <div class="success-message">
                <p><%= message %></p>
            </div>
        <% } %>

        <!-- Search Form -->
        <div class="search-section">
            <form action="/admin/users/search" method="GET" class="search-form">
                <input type="email" name="email" placeholder="Search by email..." value="<%= search %>" required>
                <button type="submit" class="search-button">Search</button>
            </form>
            <% if (search) { %>
                <a href="/admin/users" class="clear-search">Clear Search</a>
            <% } %>
        </div>

        <!-- Users Table -->
        <% if (users && users.length > 0) { %>
            <div class="users-table-container">
                <table class="users-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.first_name %> <%= user.last_name %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <span class="role-badge role-<%= user.role %>"><%= user.role %></span>
                                </td>
                                <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                                <td>
                                    <form action="/admin/users/<%= user.id %>/role" method="POST" class="role-form" onchange="this.submit()">
                                        <select name="role" class="role-select">
                                            <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                                            <option value="judge" <%= user.role === 'judge' ? 'selected' : '' %>>Judge</option>
                                            <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                                        </select>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="no-users">
                <% if (search) { %>
                    No users found matching "<%= search %>"
                <% } else { %>
                    No users registered yet.
                <% } %>
            </p>
        <% } %>
    </main>
</body>
</html>