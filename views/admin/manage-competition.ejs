<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage <%= competition.name %> - Score Higher</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Manage <%= competition.name %></h1>
        <nav>
            <a href="/admin">Admin</a>
        </nav>
    </header>
    <main>
        <p><strong>Date:</strong> <%= competition.date %></p>
        <p><strong>Location:</strong> <%= competition.location || 'TBA' %></p>
        <p><strong>Boulder:</strong> <%= competition.boulder_enabled ? 'Yes (' + competition.num_boulder_routes + ' routes)' : 'No' %></p>
        <p><strong>Lead:</strong> <%= competition.lead_enabled ? 'Yes (' + competition.num_lead_routes + ' routes)' : 'No' %></p>
        <p><strong>Self-Judged:</strong> <%= competition.self_judged ? 'Yes' : 'No' %></p>

        <div style="margin-top: 1rem;">
            <a href="/admin/competition/<%= competition.id %>/edit" class="btn">Edit Competition</a>
            <form method="POST" action="/admin/competition/<%= competition.id %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this competition? This will delete all associated routes and competitors.');">
                <button type="submit" class="btn btn-danger">Delete Competition</button>
            </form>
        </div>

        <h2>Routes</h2>
        <% if (routes && routes.length > 0) { %>
            <ul>
                <% routes.forEach(route => { %>
                    <li><%= route.type.charAt(0).toUpperCase() + route.type.slice(1) %> <%= route.number %></li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No routes.</p>
        <% } %>

        <h2>Competitors</h2>
        <% if (competitors && competitors.length > 0) { %>
            <ul>
                <% competitors.forEach(comp => { %>
                    <li><%= comp.name %> <% if (competition.self_judged) { %>- <%= comp.phone %><% } else { %>- Bib <%= comp.bib %><% } %></li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No competitors yet.</p>
        <% } %>

        <% if (!competition.self_judged) { %>
            <h3>Add Competitor</h3>
            <form action="/admin/competition/<%= competition.id %>/add-competitor" method="POST">
                <label for="name">Competitor Name:</label>
                <input type="text" id="name" name="name" required>
                <label for="bib">Bib Number:</label>
                <input type="number" id="bib" name="bib" required>
                <button type="submit">Add Competitor</button>
            </form>
        <% } else { %>
            <h3>Add Competitor</h3>
            <form action="/admin/competition/<%= competition.id %>/add-competitor" method="POST">
                <label for="name">Competitor Name:</label>
                <input type="text" id="name" name="name" required>
                <label for="phone">Phone Number:</label>
                <input type="tel" id="phone" name="phone" required>
                <button type="submit">Add Competitor</button>
            </form>
        <% } %>
    </main>
</body>
</html>