<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage <%= competition.name %> - Score Higher</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Manage <%= competition.name %></h1>
        <nav>
            <a href="/admin">Admin</a>
        </nav>
    </header>
    <main>
        <div id="viewMode">
            <p><strong>Date:</strong> <%= competition.date %></p>
            <p><strong>Location:</strong> <%= competition.location || 'TBA' %></p>
            <p><strong>Boulder:</strong> <%= competition.boulder_enabled ? 'Yes (' + competition.num_boulder_routes + ' routes)' : 'No' %></p>
            <p><strong>Lead:</strong> <%= competition.lead_enabled ? 'Yes (' + competition.num_lead_routes + ' routes)' : 'No' %></p>
            <p><strong>Self-Judged:</strong> <%= competition.self_judged ? 'Yes' : 'No' %></p>

            <button onclick="toggleEdit()">Edit Details</button>
        </div>

        <div id="editMode" style="display: none;">
            <form action="/admin/competition/<%= competition.id %>/edit" method="POST">
                <label for="name">Competition Name:</label>
                <input type="text" id="name" name="name" value="<%= competition.name %>" required><br>

                <label for="date">Date:</label>
                <input type="date" id="date" name="date" value="<%= competition.date %>" required><br>

                <label for="location">Location:</label>
                <input type="text" id="location" name="location" value="<%= competition.location || '' %>"><br>

                <label for="boulder">Enable Bouldering:</label>
                <input type="checkbox" id="boulder" name="boulder" <%= competition.boulder_enabled ? 'checked' : '' %>><br>

                <div id="boulderOptions" style="display: none;">
                    <label for="numBoulder">Number of Boulder Routes:</label>
                    <input type="number" id="numBoulder" name="numBoulder" value="<%= competition.num_boulder_routes %>" min="1"><br>
                </div>

                <label for="lead">Enable Lead:</label>
                <input type="checkbox" id="lead" name="lead" <%= competition.lead_enabled ? 'checked' : '' %>><br>

                <div id="leadOptions" style="display: none;">
                    <label for="numLead">Number of Lead Routes:</label>
                    <input type="number" id="numLead" name="numLead" value="<%= competition.num_lead_routes %>" min="1"><br>
                </div>

                <label for="customPoints">Customize Point Values:</label>
                <%
                const isCustom = competition.flash_points !== 75 || competition.second_points !== 50 || competition.third_points !== 25 || competition.zone_points !== 15 || competition.topped_bonus !== 1.5 || competition.lead_zone_points !== 15 || competition.lead_top_points !== 75;
                %>
                <input type="checkbox" id="customPoints" name="customPoints" <%= isCustom ? 'checked' : '' %>><br>

                <div id="pointOptions" style="display: none;">
                    <h3>Point Values (Bouldering)</h3>
                    <label for="flash">Flash Points:</label>
                    <input type="number" id="flash" name="flash" value="<%= competition.flash_points %>"><br>

                    <label for="second">Second Attempt Points:</label>
                    <input type="number" id="second" name="second" value="<%= competition.second_points %>"><br>

                    <label for="third">Third+ Attempt Points:</label>
                    <input type="number" id="third" name="third" value="<%= competition.third_points %>"><br>

                    <label for="zone">Zone Points:</label>
                    <input type="number" id="zone" name="zone" value="<%= competition.zone_points %>"><br>

                    <label for="bonus">Topped Bonus Multiplier:</label>
                    <input type="number" step="0.1" id="bonus" name="bonus" value="<%= competition.topped_bonus %>"><br>

                    <h3>Point Values (Lead)</h3>
                    <label for="leadZone">Zone Points:</label>
                    <input type="number" id="leadZone" name="leadZone" value="<%= competition.lead_zone_points %>"><br>

                    <label for="leadTop">Top Points:</label>
                    <input type="number" id="leadTop" name="leadTop" value="<%= competition.lead_top_points %>"><br>
                </div>

                <label for="selfJudged">Self-Judged Competition:</label>
                <input type="checkbox" id="selfJudged" name="selfJudged" <%= competition.self_judged ? 'checked' : '' %>><br>

                <button type="submit">Save Changes</button>
                <button type="button" onclick="toggleEdit()">Cancel</button>
            </form>
        </div>

        <h2>Routes</h2>
        <% if (routes && routes.length > 0) { %>
            <ul>
                <% routes.forEach(route => { %>
                    <li><%= route.type.charAt(0).toUpperCase() + route.type.slice(1) %> <%= route.number %></li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No routes.</p>
        <% } %>

        <h2>Competitors</h2>
        <% if (competitors && competitors.length > 0) { %>
            <% competitors.forEach(comp => { %>
                <div class="competitor-item" id="competitor-view-<%= comp.id %>">
                    <span><%= comp.name %> <% if (competition.self_judged) { %>- <%= comp.phone %><% } else { %>- Bib <%= comp.bib %><% } %></span>
                    <button onclick="editCompetitor(<%= comp.id %>)">Edit</button>
                    <form method="POST" action="/admin/competition/<%= competition.id %>/delete-competitor/<%= comp.id %>" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this competitor?');">
                        <button type="submit" class="btn-danger">Delete</button>
                    </form>
                </div>
                <div class="competitor-edit" id="competitor-edit-<%= comp.id %>" style="display: none;">
                    <form action="/admin/competition/<%= competition.id %>/edit-competitor/<%= comp.id %>" method="POST">
                        <label for="name-<%= comp.id %>">Competitor Name:</label>
                        <input type="text" id="name-<%= comp.id %>" name="name" value="<%= comp.name %>" required>
                        <% if (competition.self_judged) { %>
                            <label for="phone-<%= comp.id %>">Phone Number:</label>
                            <input type="text" id="phone-<%= comp.id %>" name="phone" value="<%= comp.phone || '' %>">
                        <% } else { %>
                            <label for="bib-<%= comp.id %>">Bib Number:</label>
                            <input type="number" id="bib-<%= comp.id %>" name="bib" value="<%= comp.bib || '' %>">
                        <% } %>
                        <button type="submit">Save</button>
                        <button type="button" onclick="cancelEditCompetitor(<%= comp.id %>)">Cancel</button>
                    </form>
                </div>
            <% }); %>
        <% } else { %>
            <p>No competitors yet.</p>
        <% } %>

        <% if (!competition.self_judged) { %>
            <h3>Add Competitor</h3>
            <form action="/admin/competition/<%= competition.id %>/add-competitor" method="POST">
                <label for="name">Competitor Name:</label>
                <input type="text" id="name" name="name" required>
                <label for="bib">Bib Number:</label>
                <input type="number" id="bib" name="bib" required>
                <button type="submit">Add Competitor</button>
            </form>
        <% } %>

        <form method="POST" action="/admin/competition/<%= competition.id %>/delete" style="margin-top: 2rem;" onsubmit="return confirm('Are you sure you want to delete this competition? This will delete all associated routes and competitors.');">
            <button type="submit" class="btn btn-danger">Delete Competition</button>
        </form>

        <script>
            // Set initial states
            document.addEventListener('DOMContentLoaded', function() {
                const boulderChecked = document.getElementById('boulder').checked;
                const leadChecked = document.getElementById('lead').checked;
                const customChecked = document.getElementById('customPoints').checked;

                document.getElementById('boulderOptions').style.display = boulderChecked ? 'block' : 'none';
                document.getElementById('leadOptions').style.display = leadChecked ? 'block' : 'none';
                document.getElementById('pointOptions').style.display = customChecked ? 'block' : 'none';
            });

            function toggleEdit() {
                const view = document.getElementById('viewMode');
                const edit = document.getElementById('editMode');
                if (view.style.display !== 'none') {
                    view.style.display = 'none';
                    edit.style.display = 'block';
                } else {
                    view.style.display = 'block';
                    edit.style.display = 'none';
                }
            }

            function editCompetitor(id) {
                document.getElementById('competitor-view-' + id).style.display = 'none';
                document.getElementById('competitor-edit-' + id).style.display = 'block';
            }

            function cancelEditCompetitor(id) {
                document.getElementById('competitor-view-' + id).style.display = 'block';
                document.getElementById('competitor-edit-' + id).style.display = 'none';
            }

            document.getElementById('boulder').addEventListener('change', function() {
                const boulderOptions = document.getElementById('boulderOptions');
                const numBoulderInput = document.getElementById('numBoulder');
                if (this.checked) {
                    boulderOptions.style.display = 'block';
                    if (!numBoulderInput.value || numBoulderInput.value === '0') {
                        numBoulderInput.value = '1';
                    }
                } else {
                    boulderOptions.style.display = 'none';
                    numBoulderInput.value = '';
                }
            });
            document.getElementById('lead').addEventListener('change', function() {
                const leadOptions = document.getElementById('leadOptions');
                const numLeadInput = document.getElementById('numLead');
                if (this.checked) {
                    leadOptions.style.display = 'block';
                    if (!numLeadInput.value || numLeadInput.value === '0') {
                        numLeadInput.value = '1';
                    }
                } else {
                    leadOptions.style.display = 'none';
                    numLeadInput.value = '';
                }
            });
            document.getElementById('customPoints').addEventListener('change', function() {
                document.getElementById('pointOptions').style.display = this.checked ? 'block' : 'none';
            });
        </script>
    </main>
</body>
</html>